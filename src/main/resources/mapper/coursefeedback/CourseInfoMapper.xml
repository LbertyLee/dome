<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lh.dome.coursefeedback.mapper.CourseInfoMapper">
    <resultMap id="CourseInfoResult" type="com.lh.dome.coursefeedback.domain.CourseInfo">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="teacherName" column="teacher_name"/>
    </resultMap>

    <select id="getCourseInfoList" resultMap="CourseInfoResult" parameterType="String">
        SELECT
            c.id,
            c.name,
            u.realname as teacher_name
        FROM
            course AS c
                LEFT JOIN users AS u on u.id = c.uid
        WHERE
            c.name like concat('%',#{name},'%')
    </select>

</mapper>